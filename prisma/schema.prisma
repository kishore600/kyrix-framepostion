generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  tasks     Task[]
  devices   Device[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id        String   @id @default(cuid())
  title     String
  date      DateTime
  time      String?
  category  Category @default(OTHER)
  priority  Priority @default(MEDIUM)
  completed Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Device {
  id         String   @id @default(cuid())
  deviceCode String   @unique
  mode       Mode     @default(TODAY)
  lastSync   DateTime?
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Category {
  WORK
  STUDY
  PERSONAL
  OTHER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Mode {
  TODAY
  WEEK
}